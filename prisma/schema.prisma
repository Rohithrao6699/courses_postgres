generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  user
  admin
}

model User {
  id            Int      @id @default(autoincrement())
  name          String?
  email         String   @unique
  password      String
  role          UserType
  profile       Profile?
  CreatedCourse Course[]
}

model Profile {
  id       Int    @id @default(autoincrement())
  bio      String
  age      Int
  fullname String
  userId   Int    @unique
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Course {
  id        Int    @id @default(autoincrement())
  title     String
  url       String
  seats     Int
  creatorId Int
  creator   User   @relation(fields: [creatorId], references: [id], onDelete: Cascade)
}
